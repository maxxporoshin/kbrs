{% set user = app.session.get('user') %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="css/base.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block header %}
            <div class="header-content">
                <div class="header-home"><a href="{{ path('homepage') }}">Home</a></div>
                <div class="header-right">
                    {% if user is not null %}
                        <div class="header-user">{{ user.username }}</div>
                        <div class="header-logout"><a href="{{ path('logout') }}">Logout</a></div>
                    {% else %}
                        <div class="header-login"><a href="{{ path('login_page') }}">Login</a></div>
                        <div class="header-signup"><a href="{{ path('signup_page') }}">Signup</a></div>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="js/aes.js" type="text/javascript"></script>
            <script src="js/jquery-3.1.0.min.js" type="text/javascript"></script>
            <script src="js/base.js" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
